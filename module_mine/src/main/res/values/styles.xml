<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="mine_tablayout_text_appearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.NoActionBar" tools:ignore="ResourceName">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="transparent_dialog" parent="Theme.AppCompat.Dialog" tools:ignore="ResourceName">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.MyChoice" parent="Base.Widget.MaterialComponents.Chip" tools:ignore="ResourceName">
        <item name="android:checkable">true</item>

        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>

        <item name="checkedIcon">@drawable/ic_mtrl_chip_checked_black</item>

        <item name="android:textColor">@color/mtrl_choice_chip_text_color</item>

        <item name="chipBackgroundColor">@color/mine_selector_edit_chip</item>
        <item name="rippleColor">@color/mtrl_choice_chip_ripple_color</item>

    </style>

    <style name="tab_style" tools:ignore="ResourceName">
        <item name="android:textSize">18sp</item>

        <item name="android:unselectedAlpha">0.6</item>
    </style>

</resources>
