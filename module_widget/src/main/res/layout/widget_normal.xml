<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/widget_bg_title">

        <TextView
            android:id="@+id/widget_normal_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="2dp"
            android:text="掌上重邮"
            android:textColor="#ffffff" />


        <ImageView
            android:id="@+id/widget_normal_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/widget_normal_title"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/widget_back" />

        <ImageView
            android:id="@+id/widget_normal_front"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/widget_normal_title"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/widget_front" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/widget_normal_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_normal_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/widget_colorTextBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/widget_normal_course1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/widget_colorTextBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/widget_normal_room1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="3dp"
            android:text="2217"
            android:textColor="@color/widget_colorTextBlack"
            android:textSize="14sp" />
    </LinearLayout>

