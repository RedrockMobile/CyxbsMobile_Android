<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page.trans.TransConfigActivity">

    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="颜色设置" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/widget_config_trans_timeColorLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/widget_config_trans_timeCard"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp">

                            <View
                                android:id="@+id/widget_config_trans_timeColor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000" />
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/widget_config_trans_timeCard"
                            android:text="时间颜色"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/widget_config_trans_timeColorEt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:maxLength="9"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="10dp"
                        android:background="#e7e7e7" />

                    <RelativeLayout
                        android:id="@+id/widget_config_trans_courseColorLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/widget_config_trans_courseCard"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp">

                            <View
                                android:id="@+id/widget_config_trans_courseColor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000" />
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/widget_config_trans_courseCard"
                            android:text="课程颜色"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/widget_config_trans_courseColorEt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:maxLength="9"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#e7e7e7" />

                    <RelativeLayout
                        android:id="@+id/widget_config_trans_roomColorLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/widget_config_trans_roomCard"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp">

                            <View
                                android:id="@+id/widget_config_trans_roomColor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000" />
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/widget_config_trans_roomCard"
                            android:text="教室颜色"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/widget_config_trans_roomColorEt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:maxLength="9"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/widget_config_trans_holderColorLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/widget_config_trans_holderCard"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp">

                            <View
                                android:id="@+id/widget_config_trans_holderColor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000" />
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/widget_config_trans_holderCard"
                            android:text="装饰颜色"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/widget_config_trans_holderColorEt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:maxLength="9"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="字体大小设置" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间："
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/widget_config_trans_timeTv"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:text="12：00"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <android.support.v7.widget.AppCompatSeekBar
                            android:id="@+id/widget_config_trans_timeSb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e7e7e7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="课程："
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/widget_config_trans_courseTv"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:text="高等数学"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <android.support.v7.widget.AppCompatSeekBar
                            android:id="@+id/widget_config_trans_courseSb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e7e7e7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="教室："
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/widget_config_trans_roomTv"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:text="2217"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />

                        <android.support.v7.widget.AppCompatSeekBar
                            android:id="@+id/widget_config_trans_roomSb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="0dp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="预设选择" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/widget_config_trans_default_white"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground">

                        <android.support.v7.widget.CardView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#686767"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="0dp" />

                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="36dp"
                            android:text="极简白"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="10dp"
                        android:background="#e7e7e7" />

                    <FrameLayout
                        android:id="@+id/widget_config_trans_default_black"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground">

                        <android.support.v7.widget.CardView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#000000"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="36dp"
                            android:text="酷炫黑"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="10dp"
                        android:background="#e7e7e7" />

                    <FrameLayout
                        android:id="@+id/widget_config_trans_default_pink"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground">

                        <android.support.v7.widget.CardView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#FB668E"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="36dp"
                            android:text="少女粉"
                            android:textColor="@color/widget_colorTextBlack"
                            android:textSize="16sp" />
                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/widget_config_trans_saveBt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/widget_bg_savebt"
                android:padding="10dp"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:elevation="0dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>



