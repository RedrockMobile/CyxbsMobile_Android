<resources xmlns:tools="http://schemas.android.com/tools">

    //老的课表点击dialog弹出的动画和隐藏动画,待删除

    <!-- 此主题作用与MainActivity上为了避免SwipeLayout和windowIsTranslucent属性一起使用造成的效率问题 -->

    <style name="course_BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog" >
        <!--        dialog是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--        dialog是否悬浮在activity上,设置为false，相当于布局在activity中，例如软键盘，可以顶起false的dialog-->
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <!--        状态栏字体颜色，只是在安卓6.0以上可用-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        去除dialog最底部的灰色背景-->
        <item name="colorBackgroundFloating">@color/common_transparent_background</item>
        <!--        去除dialog默认白色背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--        是否加遮罩（对话框出现时，背景变暗。为true则充许变暗）-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>



</resources>
