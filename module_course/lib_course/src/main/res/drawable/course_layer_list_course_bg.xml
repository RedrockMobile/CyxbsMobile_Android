<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--课表整个页面的背景，包括头背景-->
    <!--虽然 AS 预览有点怪，但真实的显示效果是没问题的-->

    <!-- 课表头阴影部分 -->
    <item
        android:height="70dp"
        android:gravity="top">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#3D365789"
                android:endColor="#00365789"/>
        </shape>
    </item>

    <!-- 课表头圆角背景部分 -->
    <item
        android:height="70dp"
        android:top="15dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />
            <solid android:color="@color/config_common_background_color" />
        </shape>
    </item>

    <!--课表头滑动标识-->
    <item
        android:width="38dp"
        android:height="5dp"
        android:gravity="center_horizontal"
        android:top="25dp">
        <shape
            android:shape="rectangle">
            <corners
                android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />
            <solid
                android:color="@color/course_tip_color"/>
        </shape>
    </item>

    <!--课表下面整体-->
    <item
        android:top="70dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/config_common_background_color"/>
        </shape>
    </item>

</layer-list>