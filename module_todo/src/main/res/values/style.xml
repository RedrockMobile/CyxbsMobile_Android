<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="todo_TranslucentStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景色透明 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 是否有透明属性 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 背景是否半透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- 状态栏透明 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item> <!-- activity窗口切换效果 -->
    </style>
    <style name="todo_TabTextAppearance" >
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>

    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog" tools:ignore="ResourceName">
        <!--        dialog是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--        dialog是否悬浮在activity上,设置为false，相当于布局在activity中，例如软键盘，可以顶起false的dialog-->
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <!--        状态栏字体颜色，只是在安卓6.0以上可用-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        去除dialog最底部的灰色背景-->
        <item name="colorBackgroundFloating">@color/todo_transparent_background</item>
        <!--        去除dialog默认白色背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--        是否加遮罩（对话框出现时，背景变暗。为true则充许变暗）-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomSheetDialogThemeNight" parent="Theme.Design.BottomSheetDialog" tools:ignore="ResourceName">
        <!-- dialog是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- dialog是否悬浮在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 保留 windowIsTranslucent -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 状态栏字体颜色 -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        去除dialog最底部的灰色背景-->
        <item name="colorBackgroundFloating">@color/todo_transparent_background</item>
        <!--        去除dialog默认白色背景-->
        <item name="android:background">@android:color/transparent</item>
        <!-- 设置背景遮罩颜色和透明度 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item> <!-- 设置背景变暗的程度 -->
    </style>
</resources>