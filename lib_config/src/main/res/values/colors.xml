<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="colorPrimary" tools:ignore="ResourceName">#ffffff</color>
    <color name="colorPrimaryDark" tools:ignore="ResourceName">#00000000</color>
    <color name="colorAccent" tools:ignore="ResourceName">#788EFA</color>

    <!--如果要使用纯白色和纯黑色（日间和夜间模式也一样），请使用 @android:color/white-->

    <color name="config_white_black">#FFFFFF</color>
    <color name="config_black_white">#000000</color>

    <!--视觉最常用的背景颜色，夜间为 2D2D2D-->
    <color name="config_common_background_color">#FFFFFF</color>

    <!--    主要字体颜色分以下四种，下列按照蓝色由深到浅排序，要用自取-->
    <!--    一级字体颜色-->
    <color name="config_level_one_font_color">#112C54</color>
    <!--    二级字体颜色-->
    <color name="config_level_two_font_color">#112C57</color>
    <!--    三级字体颜色-->
    <color name="config_level_three_font_color">#15315B</color>
    <!--    四级字体颜色-->
    <color name="config_level_four_font_color">#2A4E84</color>

    <!--    60%透明度的二级字体-->
    <color name="config_alpha_level_two_font_color">#9915315B</color>
    <!--    44%透明度的二级字体-->
    <color name="config_alpha_forty_level_two_font_color">#7015315B</color>

    <!--    公共dialog背景-->
    <color name="config_dialog_bg">#FFFFFF</color>
    <!--    todo界面悬浮按钮背景颜色-->
    <color name="config_todo_floatbutton">#5857F1</color>

    <!--视觉要的若隐若现阴影的 startColor，在 drawable/config_layer_looming_shadow 中使用-->
    <color name="config_layer_looming_shadow_start_color">#CBF4F6FF</color>

    <!--视觉要的若隐若现阴影的 endColor，在 drawable/config_layer_looming_shadow 中使用-->
    <color name="config_layer_looming_shadow_end_color">#FBFCFF</color>

    <!--lib_base 中公用的 BaseDialog 的按钮颜色-->
    <color name="config_choose_dialog_btn_positive">#4A44E4</color>
    <color name="config_choose_dialog_btn_negative">#C3D4EE</color>

    <!--主页面的整体灰色背景-->
    <color name="config_window_background">#F2F3F8</color>

    <!--分割线颜色-->
    <color name="config_default_divide_line_color">#19f8f9fc</color>

    <!--    按钮渐变起始颜色-->
    <color name="config_button_gradient_start_color">#4841E2</color>
    <!--    按钮渐变终止颜色-->
    <color name="config_button_gradient_end_color">#5D5DF7</color>

</resources>