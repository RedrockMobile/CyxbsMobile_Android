<resources>

    <!-- Base application theme. -->

    <style name="VolunteerEditText" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">@color/volunteer_edit_Normal</item>
        <item name="colorControlActivated">@color/volunteer_edit_activated</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/volunteer_cursor_color</item>
        <item name="android:textColorHint">@color/levelTwoFontColor</item>
        <item name="hintTextColor">@color/levelTwoFontColor</item>
        <item name="android:textColor">@color/levelTwoFontColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:cursorVisible">true</item>
    </style>

</resources>
