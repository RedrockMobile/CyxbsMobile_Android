<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qa_ic_question_freshman_background" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/qa_freshman_hot_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_level_three_font_color"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="入学考试" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/qa_freshman_hot_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qa_freshman_hot_item_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2.6dp"
            android:textColor="@color/levelFourFontColor"
            android:textSize="16sp"
            tools:text="听说会有入学考试" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>

