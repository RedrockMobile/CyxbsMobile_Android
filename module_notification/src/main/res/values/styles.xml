<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    PopupWindow 进入进出动画-->
    <style name="notification_mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/notification_popup_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/notification_popup_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--    文字用到的text Appearance-->
    <style name="notification_toolbar_tv">

        <item name="android:textSize">
            22sp
        </item>

        <item name="android:textColor">
            #112C54
        </item>

    </style>

    <style name="notification_setting_tv">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #112C54
        </item>

    </style>

    <style name="notification_setting_tips_tv">

        <item name="android:textSize">
            12sp
        </item>

        <item name="android:textColor">
            #66142C52
        </item>

    </style>

    <style name="notification_home_popup_tv">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:letterSpacing">
            0.03
        </item>

        <item name="android:textColor">
            #112C54
        </item>

    </style>

    <style name="notification_home_tab_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="notification_itinerary_tab_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="notification_itinerary_auto_clear_hint_text_style" tools:ignore="ResourceName">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/notification_itinerary_auto_clear_hint_text</item>
    </style>

    <style name="notification_itinerary_item_title_text_style" tools:ignore="ResourceName">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/config_level_three_font_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notification_itinerary_item_canceled_title_text_style" tools:ignore="ResourceName">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/notification_itinerary_item_canceled_title_text</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="notification_itinerary_item_content_text_style" tools:ignore="ResourceName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/notification_itinerary_item_content_text</item>
    </style>

    <style name="notification_itinerary_item_canceled_content_text_style" tools:ignore="ResourceName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/notification_itinerary_item_canceled_content_text</item>
    </style>


    <style name="notification_itinerary_item_generate_time_text_style" tools:ignore="ResourceName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/notification_itinerary_item_generate_time_text</item>
    </style>

    <style name="notification_itinerary_item_canceled_generate_time_text_style" tools:ignore="ResourceName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/notification_itinerary_item_canceled_generate_time_text</item>
    </style>


    <style name="notification_itinerary_item_start_status_hint_style" tools:ignore="ResourceName">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/notification_itinerary_item_not_start_hint_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notification_itinerary_item_canceled_start_status_hint_style" tools:ignore="ResourceName">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">
            @color/notification_itinerary_item_canceled_start_status_hint_text
        </item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="notification_itinerary_item_cancel_reminder_text_style" tools:ignore="ResourceName">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/notification_itinerary_item_cancel_reminder_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notification_itinerary_item_canceled_hint_style" tools:ignore="ResourceName">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/notification_itinerary_item_canceled_hint_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notification_itinerary_item_add_affair_text_style" tools:ignore="ResourceName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/notification_itinerary_item_add_affair_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notification_itinerary_item_affair_added_hint_style" tools:ignore="ResourceName">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/notification_itinerary_item_affair_added_hint_text
        </item>
    </style>
</resources>