<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/affair_tv_find_course_history_name"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_margin="4dp"
        android:background="@drawable/affair_shape_item_text_bg"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/config_level_two_font_color"
        android:textSize="14dp"
        tools:ignore="SpUsage"
        tools:text="五六节课 周六" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/affair_ib_find_course_history_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_gravity="end"
        android:padding="0dp"
        app:srcCompat="@drawable/affair_ic_find_course_history_delete" />

</FrameLayout>