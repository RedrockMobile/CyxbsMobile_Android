<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    闪屏页,用于系统在创建app进程之前显示的预览图片-->
    <style name="SplashTheme" parent="AppTheme" >
        <item name="android:windowBackground">@drawable/main_layer_list_splash</item>
    </style>
    <!--    真正MainActivity的主题，如果需要对MainActivity主题进行定制，请写在下面-->
    <style name="MainActivityTheme" parent="SplashTheme">
        <!-- 切记不要将这个设置为空来优化UI绘制,否则某些activity动画会透视到桌面，
                但是应该除了main其他的activity都可以去掉这个置为@null-->
        <item name="android:windowBackground">@drawable/main_shape_activity_window_background</item>
<!--        沉浸状态栏-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置statusBarColor 为透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="LoginTextInputStyle" parent="AppTheme" >
        <item name="colorAccent">@color/common_level_two_font_color</item>
    </style>

    <style name="transparent_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="main_user_agreement">

        <item name="android:textSize">
            11sp
        </item>

        <item name="android:textColor">
            #ABBCD8
        </item>

    </style>

    <style name="main_dialog_tv_tips">

        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            #2A4E84
        </item>

    </style>
</resources>